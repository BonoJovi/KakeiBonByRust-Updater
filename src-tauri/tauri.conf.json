{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "KakeiBon Updater",
  "version": "1.1.0",
  "identifier": "com.bonojovi.kakeibon-updater",
  "build": {
    "frontendDist": "../res"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "KakeiBon Database Updater",
        "width": 500,
        "height": 400,
        "resizable": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "deb": {
        "depends": []
      }
    }
  }
}
